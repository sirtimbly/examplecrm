{
    "compilerOptions": {
        "outDir": "./build/scripts",
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node"
        ],
        "baseUrl": "./",
        "experimentalDecorators": false,
        "allowSyntheticDefaultImports": false
    },
    "include": [
        "./src/scripts/**/*",
        "./src/styles/**/*"
    ],
    "exclude": [
        "**/node_modules"
    ]
}
